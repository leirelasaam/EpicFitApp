<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrenador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntrenadorActivity">

    <LinearLayout
        android:id="@+id/verticalLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.9">

        <TextView
            android:id="@+id/tituloTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="10dp"
            android:text="@string/entrenador"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_filtrarWorkouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/filtrar_workouts"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"
            tools:ignore="LabelFor" />

        <Spinner
            android:id="@+id/spinnerNiveles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_filtrarWorkouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filtrar_workouts" />

        <Button
            android:id="@+id/btn_aniadirWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aniardir_workout" />

        <Button
            android:id="@+id/btn_ModificarWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/modificar_workout" />

        <Button
            android:id="@+id/btn_eliminarWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eliminar_workout"
            />

        <Button
            android:id="@+id/btn_volver_a_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/volver" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workoutsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
